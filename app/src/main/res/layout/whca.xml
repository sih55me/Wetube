<?xml version="1.0" encoding="utf-8"?>
<app.wetube.widget.FragmentTabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            style="@android:style/Widget.Holo.Light.TabWidget"
            android:id="@android:id/tabs"
            android:background="?android:colorPrimary"
            android:layout_width="match_parent"
            android:paddingEnd="@dimen/marginContent"
            android:paddingStart="@dimen/marginContent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

            <FrameLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

        </FrameLayout>
    </LinearLayout>
</app.wetube.widget.FragmentTabHost>