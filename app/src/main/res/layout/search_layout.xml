<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NestedScrollingChild goes here (NestedScrollView, RecyclerView, etc.). -->

    <LinearLayout
        android:layout_width="match_parent"
        style="?android:toolbarStyle"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Space
            android:layout_width="@dimen/marginSearchBar"
            android:layout_height="match_parent" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardElevation="5dp"
            android:layout_height="?android:actionBarSize"
            app:cardBackgroundColor="?android:colorBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Toolbar
                android:id="@+id/toolbar2"
                android:background="@null"
                android:layout_width="match_parent"
                android:navigationIcon="?android:homeAsUpIndicator"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:maxLines="1"
                    android:inputType="textFilter"
                    android:imeOptions="actionSearch|flagNoExtractUi"
                    android:id="@+id/textView"
                    android:imeActionLabel="@android:string/search_go"
                    android:hint="@android:string/search_go"
                    android:layout_height="match_parent"/>
            </Toolbar>

        </android.support.v7.widget.CardView>
        <Space
            android:layout_width="@dimen/marginSearchBar"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/marginContent"
        android:paddingStart="@dimen/marginContent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:colorAccent"
            android:text="@string/history_search"/>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <ScrollView
            android:orientation="vertical"
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:tint="?android:colorAccent"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="80dp"
                    android:contentDescription="@null"
                    android:src="@drawable/error" />

                <TextView
                    android:id="@+id/empty_text"
                    style="?android:textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_add"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="@string/no_history_saved"
                    android:textColor="?android:attr/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>








</LinearLayout>