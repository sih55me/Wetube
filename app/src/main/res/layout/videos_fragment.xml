<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridView
            android:fadeScrollbars="true"
            android:fastScrollStyle="@android:style/Widget.DeviceDefault.FastScroll"
            android:fastScrollAlwaysVisible="true"
            android:id="@+id/videos_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:fastScrollEnabled="true"
            android:scrollbarStyle="outsideInset"
            tools:itemCount="11"
            android:verticalScrollbarPosition="left"
            tools:listitem="@layout/item" />

        <ScrollView
            android:id="@+id/empty_container"
            android:layout_width="match_parent"
            android:fillViewport="false"
            android:pointerIcon="no_drop"
            android:background="?android:colorBackground"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="80dp"
                    android:contentDescription="@null"
                    android:src="@drawable/error"
                    android:tint="?android:attr/colorAccent"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/empty_text"
                    style="?android:textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:textColor="?android:attr/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_add"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/empty"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/summ"
                    android:layout_centerInParent="true"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:textColor="?android:attr/colorActivatedHighlight"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/empty_text"
                    android:gravity="center"
                    android:text="Try add video from external (like Youtube) or from 'Explore' Tab"/>
            </RelativeLayout>
        </ScrollView>


        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>






</FrameLayout>

