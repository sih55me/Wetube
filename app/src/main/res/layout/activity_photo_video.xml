<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:transitionName="fade"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cardmusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editTextText"
        android:background="@drawable/tvback">

        <TextView
            android:id="@+id/title_context"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_margin="20dp"
            android:layout_marginTop="-29dp"
            android:text="Watch this!!"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_context"
            android:layout_below="@id/title_context"
            android:layout_centerInParent="true"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/t"
            android:textColor="@android:color/white"
            android:layout_below="@id/image_context"
            android:text="Video name here" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:fontFamily="@font/fredoka_one"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="TextView" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:inputType="text"
        android:text="Music" />


</RelativeLayout>