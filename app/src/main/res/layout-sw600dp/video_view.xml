<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:transitionName="fade"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoView">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/vidlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/straing"
                    android:layout_height="wrap_content">
                    <app.wetube.widget.WebViewMaster
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/whoc">
                        <app.wetube.widget.WebViewMaster
                            android:layout_width="match_parent"
                            android:id="@+id/saver_container"
                            android:layout_height="match_parent">
                            <app.wetube.ytli.WTP
                                android:id="@+id/videoview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </app.wetube.widget.WebViewMaster>

                        <Button
                            android:id="@+id/fadet"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <include
                            android:id="@+id/videoLay"
                            layout="@layout/video_embed" />
                    </app.wetube.widget.WebViewMaster>


                </LinearLayout>

                <Button
                    android:id="@+id/opencenel"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/profile"
                    android:text=""
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Video"
                        android:textColor="?android:attr/colorAccent"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </ScrollView>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#23757575"
                    android:orientation="vertical">

                    <ActionMenuView
                        android:id="@+id/menu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/share"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/share"
                                android:drawablePadding="10dp"
                                android:text="@string/share" />

                            <Button
                                android:id="@+id/manage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/add"
                                android:drawablePadding="10dp"
                                android:text="@string/add" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/toolbarpl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/plti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="Playlist"
                            android:textColor="?android:attr/colorMultiSelectHighlight"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/playlist_con"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/prev_v"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableLeft="@drawable/previous"
                            android:drawablePadding="10dp"
                            android:text="@string/prev" />

                        <Button
                            android:id="@+id/next_v"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableRight="@drawable/next"
                            android:drawablePadding="10dp"
                            android:text="@string/next" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/playlist"
                        android:pointerIcon="hand"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />


                </LinearLayout>





            </LinearLayout>




        </LinearLayout>
    </LinearLayout>






</FrameLayout>