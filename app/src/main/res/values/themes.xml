<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- WTB theme  -->

    <style name="Wetube.Sy.L" parent="android:Theme.DeviceDefault.Light">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:actionModeWebSearchDrawable">@drawable/search</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCLoseStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/check</item>
        <item name="android:toolbarStyle">@style/ToolBarStyle</item>
        <item name="android:actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.Overflow</item>


    </style>

    <style name="ActionModeCLoseStyle" parent="@android:style/Widget.Material.ActionButton.CloseMode">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>




    <style name="WetubeTitle">
        <item name="android:fontFamily">@font/parkinsans</item>
        <item name="android:textColor">@color/search_opaque</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>




    <style name="Wetube.Sy.D" parent="android:Theme.DeviceDefault">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:actionModeCloseDrawable">@drawable/check</item>
        <item name="android:toolbarStyle">@style/ToolBarStyle</item>
        <item name="android:actionModeWebSearchDrawable">@drawable/search</item>
        <item name="android:actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.Overflow</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCLoseStyle</item>
    </style>

    <style name="Wetube.Sy" parent="Wetube.Sy.L" />

    <style name="Wetube.Sy.O" parent="Wetube.Sy.L.O" />

    <style name="Wetube.Sy.Dialog" parent="Wetube.Sy.Dialog.L" />




    <!-- DD theme  -->
    <style name="AlertDialogStyle">
        <item name="android:layout">@null</item>
    </style>
    <!-- WTB theme  -->

    <style name="Wetube.Sy.Dialog.L" parent="android:Theme.DeviceDefault.Light.Dialog.Alert">
        <!-- Applying style like this  -->
        <item name="android:colorButtonNormal">#FFECC8</item>
        <item name="android:colorControlHighlight">#69FFBB33</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:actionModeCloseDrawable">@drawable/close</item>
        <item name="android:actionModeBackground">@drawable/acmo</item>
        <item name="android:panelBackground">@color/bg_light</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCLoseStyle</item>
        <item name="android:toolbarStyle">@style/ToolBarStyle</item>
        <item name="android:colorPrimaryDark">#E6DCC8</item>
        <item name="android:colorPrimary">#FAEFD8</item>
        <item name="android:colorAccent">@android:color/holo_orange_light</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:colorBackground">#FFF5D8</item>
        <item name="android:actionModeWebSearchDrawable">@drawable/search</item>
        <item name="android:actionModeShareDrawable">@drawable/share</item>
        <item name="android:alertDialogIcon">@drawable/info</item>
        <item name="android:actionModeFindDrawable">@drawable/manage_search</item>
        <item name="android:dialogTheme">@style/Wetube.Sy.Dialog.L</item>
        <item name="android:alertDialogTheme">@style/Wetube.Sy.Dialog.L</item>
    </style>



    <style name="Wetube.Sy.Dialog.D" parent="android:Theme.DeviceDefault.Dialog.Alert">
        <item name="android:colorPrimaryDark">#251400</item>
        <item name="android:colorControlHighlight">#73FF8800</item>
        <item name="android:actionModeBackground">@drawable/acmo</item>
        <item name="android:panelBackground">@color/bg_dark</item>
        <item name="android:colorButtonNormal">#663E00</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:actionModeCloseDrawable">@drawable/close</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorAccent">@android:color/holo_orange_light</item>
        <item name="android:colorBackground">#3C2105</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:colorPrimary">#3C2000</item>
        <item name="android:toolbarStyle">@style/ToolBarStyle</item>
        <item name="android:titleTextAppearance">@style/WetubeTitle</item>
        <item name="android:textAppearanceLarge">@style/WetubeTitle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCLoseStyle</item>
        <item name="android:actionModeWebSearchDrawable">@drawable/search</item>
        <item name="android:actionModeShareDrawable">@drawable/share</item>
        <item name="android:alertDialogIcon">@drawable/info</item>
        <item name="android:actionModeFindDrawable">@drawable/manage_search</item>
        <item name="android:dialogTheme">@style/Wetube.Sy.Dialog.D</item>
        <item name="android:alertDialogTheme">@style/Wetube.Sy.Dialog.D</item>

    </style>

    <style name="Sy" parent="android:Theme.DeviceDefault.Light" />

    <!-- DD Pref theme  -->

    <style name="Sy.Pref" parent="android:Theme.DeviceDefault.Light.Dialog" />


    <style name="Widget.GuidelinesCompat.Toolbar.Button.Navigation" parent="android:Widget.Material.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Widget.GuidelinesCompat.ActionButton.Overflow" parent="android:Widget.Material.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:src">@drawable/more</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.GuidelinesCompat.ActionMode" parent="android:Widget.Material.ActionMode">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>




    <style name="ToolBarStyle" parent="android:Widget.Material.Toolbar">
        <item name="android:contentInsetStart">16dp</item>
        <item name="android:maxButtonHeight" tools:targetApi="24">48dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>






</resources>